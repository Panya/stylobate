kind-group()
  @extends $kind-group

$kind-group
  kind-block(inline)
  white-space: nowrap

kind-group-item()
  unless no-radius in arguments
    &:first-child
      kind-group-start(arguments)

    &:not(:first-child):not(:last-child)
      kind-group-middle(arguments)

    &:last-child
      kind-group-end(arguments)

kind-group-start()
  {utilus_alike(arguments, '')}
    @extends $kind-group-start

$kind-group-start
  unless ie
    border-top-right-radius: 0
    border-bottom-right-radius: 0

kind-group-end()
  unless no-margin in arguments
    @extends $kind-group-margin

  {utilus_alike(arguments, '')}
    @extends $kind-group-end

$kind-group-end
  unless ie
    border-top-left-radius: 0
    border-bottom-left-radius: 0

$kind-group-margin
  margin-left: -1px

kind-group-middle()
  unless no-margin in arguments
    @extends $kind-group-margin

  $selector = utilus_alike(arguments, '')
  if $selector != ''
    {$selector}
      border-radius: 0
  else
    border-radius: 0
