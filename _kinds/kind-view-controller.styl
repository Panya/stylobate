kind-view-controller()
  $view = utilus_alike(arguments, '&-view')
  $controller = utilus_alike(arguments, '&-controller', 1)

  {$controller}
    kind-hidden(visually)
    // Could add `.is-disabled &\n kind: hidden`

  if checked in arguments
    input:checked + {$view}
      skin: button_checked

  if focus in arguments
    :focus + {$view}
      skin: button_focus
