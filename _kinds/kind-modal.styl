kind-modal-wrap()
  kind-guide(arguments)
  kind-centering(arguments)

  z-index: 99

  unless no-elements in arguments
    unless no-helper in arguments
      &:after
        kind-modal-wrap-helper(arguments)


kind-modal-wrap-helper()
  kind-centering-helper(arguments)


kind-modal()
  kind-guide-item(arguments)
  kind-centering-item(arguments)

  position: relative
  max-width: 100%
  max-height: 100%
  // use calc like this here?
  //   max-width: unquote("-webkit-calc(100% - " + 2*$l + ")")

  overflow: auto

kind-modal-paranja()
  kind-fill(arguments)
  kind-guide-item(arguments)
