kind-content()
  $sides = utilus_get_sides(arguments)
  if ie or arguments == ''
    padding: $sides
  else
    padding: 1px $sides[1] 1px $sides[3]

    unless no-elements in arguments
      if no-before in arguments
        padding-top: $sides[0]
      else
        &:before
          kind-content-before(arguments)

      if no-after in arguments
        padding-top: $sides[2]
      else
        &:after
          kind-content-after(arguments)

kind-content-before()
  content: ""
  display: block

  margin-top: -1px
  margin-bottom: any_get_sides(arguments)[0]

kind-content-after()
  content: ""
  display: block

  margin-bottom: -1px
  margin-top: any_get_sides(arguments)[2]
