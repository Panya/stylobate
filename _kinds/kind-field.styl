kind-field()
  kind-input(no-reset)

  unless no-elements in arguments
    &-content
      kind-field-content()

    &-left
      kind-field-left(arguments)

    &-right
      kind-field-right(arguments)

kind-field-content()
  kind-block(static)

  overflow: hidden

  height: 100%

kind-field-left()
  position: relative
  z-index: 9
  float: left

  unless no-margin in arguments
    margin: -0.5*$s -1*$s
    margin-right: 0

  unless no-padding in arguments
    padding: 0.5*$s $s

kind-field-right()
  position: relative
  z-index: 9
  float: right

  unless no-margin in arguments
    margin: -0.5*$s -1*$s
    margin-left: 0

  unless no-padding in arguments
    padding: 0.5*$s $s
