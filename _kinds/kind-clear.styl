kind-clear()
  if !ie
    unless after in arguments or utilus_get(arguments, '-before')
      &:before
        kind-clear-before(arguments)
    unless before in arguments or utilus_get(arguments, '-after')
      &:after
        kind-clear-after(arguments)

  zoom: 1

kind-clear-before()
  @extends $kind-clear-before

kind-clear-after()
  @extends $kind-clear-after

$kind-clear-before
  content: ""
  display: table

$kind-clear-after
  content: ""
  display: table
  clear: both
