kind-input()
  @extends $kind-input

  width: utilus_alike(arguments, 400px)

  $align = utilus_retrieve(arguments, middle top bottom)
  vertical-align: $align if $align

  unless no-reset in arguments
    reset('input')
    // It would be nice to have a way to insert it without extends

$kind-input
  kind-block(inline)

  box-sizing: border-box

  max-width: 100%

  cursor: text
  vertical-align: baseline
