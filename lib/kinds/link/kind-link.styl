kind-link()
  unless nested in arguments
    cursor: pointer

    color: utilus_alike(arguments, #22C)

    unless no-hover in arguments
      &:hover
        kind-link_hover(arguments)

  if underline in arguments
    text-decoration: underline
  else
    text-decoration: none

  if pseudo in arguments
    text-decoration: none
    border-bottom: 1px dotted

kind-link_hover()
  color: utilus_alike(arguments, #D00, 1)
