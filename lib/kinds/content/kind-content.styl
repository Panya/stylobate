kind-content()
  $sides = utilus_get_sides(arguments)
  if ie or ('' + $sides == '0 0 0 0')
    padding: $sides
  else
    padding: 0 $sides[1] 0 $sides[3]

    unless no-elements in arguments
      unless utilus_get(arguments, '-before')
        if no-before in arguments
          padding-top: $sides[0]
        else
          &:before
            kind-content-before(arguments)

      unless utilus_get(arguments, '-after')
        if no-after in arguments
          padding-top: $sides[2]
        else
          &:after
            kind-content-after(arguments)

kind-content-before()
  content: ""
  display: table

  margin-bottom: any_get_sides(arguments)[0]

kind-content-after()
  content: ""
  display: table
  clear: both

  margin-top: any_get_sides(arguments)[2]
