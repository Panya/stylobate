kind-content()
  $sides = utilus_get_sides(arguments)
  if ie or ('' + $sides == '0 0 0 0')
    padding: $sides
  else
    padding: 0 $sides[1] 0 $sides[3]

    stylobate_defaults(arguments,
      -before (no-before in arguments or no-elements in arguments ? '' : '&:before'),
      -after (no-after in arguments or no-elements in arguments ? '' : '&:after'))

    if no-before in arguments or (-before '') in arguments
      padding-top: $sides[0]

    if no-after in arguments or (-after '') in arguments
      padding-top: $sides[2]

  // Deprecating no-â€¦
  deprecate(arguments, no-before)
  deprecate(arguments, no-after)
  depecate_removed(arguments, no-elements)


kind-content-before()
  pseudo-with-content()

  display: table

  margin-bottom: any_get_sides(arguments)[0]

kind-content-after()
  pseudo-with-content()

  display: table
  clear: both

  margin-top: any_get_sides(arguments)[2]
