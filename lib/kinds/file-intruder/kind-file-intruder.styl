kind-file-intruder()
  +cache('kind-file-intruder')
    kind-fill()
    z-index: 11
    color: red

    // In IE we could live without focus
    if ie
      overflow: hidden



// This block shouldn't have `por`, so focus could be properly positioned over parent
kind-file-intruder-inner()
  +cache('kind-file-intruder-inner')
    float: right
    text-align:right
    overflow: hidden

    width: 100%
    height: 100%

kind-file-intruder-input()
  +cache('kind-file-intruder-input')
    position: relative
    z-index: 11

    display: inline-block
    vertical-align: 0
    padding: 0
    margin: -5em 0 0 -400px
    width: 500px

    cursor: pointer

    font-size: 80px

    opacity: 0

kind-file-intruder-focus()
  kind(fill)
